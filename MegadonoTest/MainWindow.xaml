<Window x:Class="MegadonoTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MegadonoTest"
        Title="Megadono test" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid x:Name="placeholder">
            <local:FileSelection/>
        </Grid>

        <GridSplitter Grid.Row="1"/>
        
        <TextBox Grid.Row="2" AcceptsReturn="True" IsReadOnly="True" DockPanel.Dock="Bottom" x:Name="log"/>
    </Grid>
</Window>
